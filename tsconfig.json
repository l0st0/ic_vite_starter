{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/backend/main": [".dfx/local/canisters/backend"],
      "@/styles": ["src/frontend/styles/index.ts"],
      "@/pages": ["src/frontend/pages/index.tsx"],
      "@/components": ["src/frontend/components/index.ts"],
      "@/utils": ["src/frontend/utils/index.ts"],
      "@/types": ["src/frontend/types/index.ts"],
      "@/hooks": ["src/frontend/hooks/index.ts"],
      "@/assets/*": ["src/frontend/assets/*"]
    }
  },
  "include": ["src/frontend"]
}
